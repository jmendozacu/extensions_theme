<config>
    <tabs>
        <strongtics>
            <label>strongtics</label>
            <sort_order>5000</sort_order>
        </strongtics>
    </tabs>
    <sections>
        <sticsrichsnippets translate="label" module="sticsrichsnippets">
            <label>Rich Snippets</label>
            <tab>strongtics</tab>
            <sort_order>8000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <activation translate="label">
                    <label>Rich Snippets Global Activation</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>0</sort_order>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <comment><![CDATA[Mdule global activation]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>  
                        <google_plusone_author_page translate="label">
                            <label>Google+ Page link</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_plusone_author_page>                         
                    </fields>
                </activation>     
            </groups> 
            <groups>
                <author translate="label">
                    <label>Setting for Author Rich Snippets</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>                
                        <enabled translate="label">
                            <label>Author Rich Snippets</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>                       
                    </fields>
                </author>                
            </groups> 
            <groups>
                <breadcrumbs translate="label">
                    <label>Setting for Breadcrumbs Rich Snippets</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>20</sort_order>
                    <fields>                
                        <enabled translate="label">
                            <label>Enabled for Breadcrumbs</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>                                                                                                       
                    </fields>
                </breadcrumbs>                
            </groups>   
            <groups>
                <organization translate="label">
                    <label>Setting for Organization Logo Rich Snippets</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>30</sort_order>
                    <fields>                                                      
                        <enabled translate="label">
                            <label>Enabled the markup for Organization Logo</label>
                            <comment><![CDATA[This snippet requires that following the information be pre-setted:<br>                             
                             - Store Name, Phone, Country and Store Contact Address (at Admin > System > Configuration > General > General > Store information )<br>
                             - Send Emails To (at Admin > System > Configuration > General > Contacts.)<br>
                             - and Logo Image Source (at Admin > System > Configuration > General > Design > Header)<br>                            
                            At list set the store name and the phone number.                                         
                            ]]>               
                            </comment>                            
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </enabled>
                        <store_street_address>
                            <label>Store Street Address</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>10</sort_order>
                        </store_street_address>
                        <store_postal_code_address>
                            <label>Store Postal Code Address</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>20</sort_order>
                        </store_postal_code_address> 
                        <store_city_address>
                            <label>Store City Address</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>30</sort_order>
                        </store_city_address>                        
                    </fields>
                </organization>                
            </groups> 
            <groups>
                <publisher translate="label">
                    <label>Setting for Publisher Rich Snippets</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>40</sort_order>
                    <fields>                
                        <enabled translate="label">
                            <label>Publisher Rich Snippets</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>                       
                    </fields>
                </publisher>                
            </groups>             
            <groups>
                <product translate="label">
                    <label>Setting for Product Rich Snippets</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>50</sort_order>
                    <fields>                                                      
                        <enabled translate="label">
                            <label>Enabled for Product data</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>                                                                     
                    </fields>
                </product>                
            </groups>
        </sticsrichsnippets>
    </sections>
</config>
