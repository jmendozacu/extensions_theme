<?php if ($this->getReviewsCount()): ?>
	<?php $_items = $reviewcollection = Mage::getModel('review/review')->getCollection()
					    ->addStoreFilter(Mage::app()->getStore()->getId())
					    ->addStatusFilter(Mage_Review_Model_Review::STATUS_APPROVED)
					    ->addFieldToFilter('entity_id', Mage_Review_Model_Review::ENTITY_PRODUCT)
					    ->addFieldToFilter('entity_pk_value', $this->getProduct()->getId())
					    ->setDateOrder()
					    ->addRateVotes()
					    ->getItems();
	?>
		<div class="box-collateral box-reviews" id="customer-reviews">
		<?php echo  $this->getLayout()->createBlock('review/form')->setBlockId('product.review.form')->toHtml(); ?>
		    <?php if (count($_items)):?>
		        <h2><?php echo $this->__('Customer Reviews') ?></h2>		       
		        <dl>
		        <?php foreach ($_items as $_review):?>
		            <dt>
		               <?php echo $this->__('Review by <span>%s</span>', $this->escapeHtml($_review->getNickname())) ?>
		            </dt>
		            <dd>
		                <?php $_votes = $_review->getRatingVotes(); ?>
		                <?php if (count($_votes)): ?>
		                <table class="ratings-table">
		                    <col width="1" />
		                    <col />
		                    <tbody>
		                        <?php foreach ($_votes as $_vote): ?>
		                        <tr>
		                            <th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></th>
		                            <td>
		                                <div class="rating-box">
		                                    <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
		                                </div>
		                            </td>
		                        </tr>
		                        <?php endforeach; ?>
		                    </tbody>
		                </table>
		                <?php endif; ?>
		                <?php echo nl2br($this->escapeHtml($_review->getDetail())) ?>
		                <small class="date"><?php echo $this->__('(Posted on %s)', $this->formatDate($_review->getCreatedAt()), 'long') ?></small>
		            </dd>
		        <?php endforeach; ?>
		        </dl>
		    <?php endif;?>		     
		</div>
<?php elseif ($this->getDisplayIfEmpty()): ?>  
    <?php echo  $this->getLayout()->createBlock('review/form')->setBlockId('product.review.form')->toHtml(); ?>
<?php endif; ?>
